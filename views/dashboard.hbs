<h1>Dashboard</h1>
<h3>Welcome {{name}}</h3>
<p>Here are your stories</p>

{{#if stories}}
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Status</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    {{#each stories}}
    <tr>
      <td><a href="/stories/{{_id}}">{{title}}</a></td>

      <td>{{formatDate created_at 'MMMM Do YYYY, h:mm:ss a'}}</td>

      <td><span class="dash-status">{{status}}</span></td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<p>You have not created any stories</p>
{{/if}}